<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="120dp"
        app:cardBackgroundColor="@color/whiteBodyColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:contentPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="731dp"
        tools:layout_conversion_absoluteWidth="411dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/face_id"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/card_icon_desc"
                android:cropToPadding="false"
                android:elevation="13dp"
                android:src="@drawable/card_icon"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="50dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="341dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/age_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="TextView"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="562dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <TextView
                    android:id="@+id/emotion_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="TextView"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/emotion_bar_id"
                    app:layout_constraintStart_toEndOf="@+id/age_id"
                    tools:layout_conversion_absoluteHeight="134dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <ProgressBar
                    android:id="@+id/emotion_bar_id"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:paddingStart="10dp"
                    android:progress="0"
                    android:progressTint="#FD0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/emotion_id"
                    tools:layout_conversion_absoluteHeight="35dp"
                    tools:layout_conversion_absoluteWidth="98dp" />

                <TextView
                    android:id="@+id/emotion_id_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Emotion"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="562dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <ProgressBar
                    android:id="@+id/emotion_bar_id_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:paddingStart="10dp"
                    android:progress="0"
                    android:progressTint="#FD0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/emotion_id"
                    tools:layout_conversion_absoluteHeight="35dp"
                    tools:layout_conversion_absoluteWidth="98dp" />

                <TextView
                    android:id="@+id/emotion_id_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Emotion"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="562dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <ProgressBar
                    android:id="@+id/emotion_bar_id_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:paddingStart="10dp"
                    android:progress="0"
                    android:progressTint="#FD0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/emotion_id"
                    tools:layout_conversion_absoluteHeight="35dp"
                    tools:layout_conversion_absoluteWidth="98dp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>